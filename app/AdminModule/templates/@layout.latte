              <ul class="dropdown-menu">
                <li><a href="#"><i class="fa fa-plug"></i>&nbsp;Propojení</a></li>
                <li><a href="#"><i class="fa fa-pencil-square-o"></i>&nbsp;Vzhled</a></li>
              </ul>
            </li>

            <li><a href="{link :Admin:Sign:out}">Odhlásit se &nbsp;  <i class="fa fa-sign-out"></i></a></li>         
          </ul>
        </div><!--/.nav-collapse -->
      </div>
    </div>
    {/if}

    <div class="wrapper-content">
      <!--FLASHES-->

      {snippet flashMessages}

      <div n:foreach="$flashes as $flash" class="alert flash alert-{$flash->type} animated fadeInDown"> 
        <button type="button" class="close" data-dismiss="alert" aria-label="Close"></button>
        {$flash->message}
      </div>
      {/snippet}   
      {include content}
    </div> <!-- /container -->

    {block scripts}
<!-- Bootstrap core JavaScript
  ================================================== -->
  <!-- Placed at the end of the document so the pages load faster -->
